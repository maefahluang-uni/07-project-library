  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Application",
      "request": "launch",
      "mainClass": "lab.microservice.greet.Application",
      "projectName": "sample-service"
    },
    {
      "type": "java",
      "name": "Launch Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "java",
      "name": "Launch EurekaNamingServerApplication",
      "request": "launch",
      "mainClass": "lab.microservice.namingserver.EurekaNamingServerApplication",
      "projectName": "naming-server"
    },
    {
      "type": "java",
      "name": "Launch UserService1",
      "request": "launch",
      "mainClass": "lab.microservice.userrepo.Application",
      "projectName": "user-service",
      "args": "--server.port=8001"
    },
    {
      "type": "java",
      "name": "Launch UserService2",
      "request": "launch",
      "mainClass": "lab.microservice.userrepo.Application",
      "projectName": "user-service",
      "args": "--server.port=8002"
    },
    {
      "type": "java",
      "name": "Launch GreetService",
      "request": "launch",
      "mainClass": "lab.microservice.greet.Application",
      "projectName": "greet-service"
    }
  ]
}
